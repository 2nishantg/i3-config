out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0
text_buffer_size 1000
double_buffer yes

update_interval 1.0
total_run_times 0

short_units yes
if_up_strictness address
use_spacer left
override_utf8_locale yes
cpu_avg_samples 2

TEXT
,[ \
  ${exec $HOME/scripts/conkyrc.py}, {"separator": false,"full_text": " ↑${upspeed eth0}", "color":"\#ff0000"},
             {"separator": false,"full_text": " ↓ ${downspeed eth0} ", "color":"\#00ff00"} \
]