# Locks the screen, waits 60 seconds and turns the screen off if it's still locked
#bindsym $mod+grave exec ~/scripts/i3exit

# Locks the screen then suspends the computer. pm-utils package required
bindsym $mod+Shift+grave exec "sudo pm-suspend | i3lock -i `echo $(shuf -n1 -e ~/.i3/wallpaper/*) | tee /tmp/wall`"
# Automatically lock the screen in three minutes. xautolock package required
exec --no-startup-id xautolock -time 3 -locker 'i3lock -i `shuf -n1 -e ~/.i3/wallpaper/*`; sleep 60; pgrep i3lock && xset dpms force off' &
# Sets the wallpaper to a random image. feh package required


